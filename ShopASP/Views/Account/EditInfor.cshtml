@model ShopASP.Models.ViewModel.CustomerViewModels

@{
    ViewBag.Title = "Thêm thông tin cho tài khoản của bạn";
}
<div class="row">
    <div class="col-md-6 offset-4">
        <div class="col-md-10">
            <h2 style="text-align: center">@ViewBag.Title</h2>
        </div>
        @using (Html.BeginForm("EditInfor", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-10">
                <h4 style="text-align: center">Thêm thông tin giúp chúng tôi phục vụ bạn tốt hơn</h4>
                <hr />
            </div>

            @*@Html.ValidationSummary(true)*@
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Dob, new { @class = "col-md-10 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Dob, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "col-md-10 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Giới tính", new { @class = "col-md-10 control-label" })
                <div class="col-md-10 row offset-3">
                    <div class="col-md-2">
                        Nam @Html.RadioButtonFor(m => m.Gender, false)
                    </div>
                    <div class="col-md-2">
                        Nữ @Html.RadioButtonFor(m => m.Gender, true)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-10 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-10 control-label" })
                <div class="col-md-10">
                    <input type="file" id="ImagePath" name="ImagePath" class="form-control-file" value="Tải lên" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default col-md-12" value="Thêm thông tin" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
