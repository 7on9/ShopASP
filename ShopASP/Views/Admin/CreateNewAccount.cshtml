@model ShopASP.Models.ViewModel.EmployeeViewModels

@{
    ViewBag.Title = "CreateNewAccount";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo mới tài khoản nhân viên</h2>

@using (Html.BeginForm("CreateNewAccount", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)

<div class="form-vertical col-lg-6">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Dob, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Dob, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Giới tính", new { @class = "col-md-10 control-label" })
        <div class="col-md-10 row offset-3">
            <div class="col-md-2">
                Nam @Html.RadioButtonFor(m => m.Gender, false)
            </div>
            <div class="col-md-2">
                Nữ @Html.RadioButtonFor(m => m.Gender, true)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RetypePassword, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RetypePassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            <input type="file" id="ImagePath" name="ImagePath" class="form-control-file" value="Tải lên" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Role, new { @class = "col-md-10 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Role, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default col-md-12" value="Tạo tài khoản" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
