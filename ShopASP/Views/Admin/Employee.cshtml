
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<ShopASP.Models.Employee>


<!-- Item -->
<div class="row">
    <div class="col-lg-12">
        <div class="row col-lg-12 offset-0">
            <button type="button" class="btn btn-success col-lg-2" onclick="location.href='/Admin/CreateNewEmployee'">
                <i class="fa fa-plus-circle"></i>&nbsp; Thêm mới
            </button>
        </div>
        
        <h2 class="title-1 m-b-25 text-center">Danh sách nhân viên</h2>

        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Họ & tên</th>
                        <th>Giới tính</th>
                        <th>Năm sinh</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.ID</td>
                            <td>@employee.Name</td>
                            <td>@(employee.Gender == false ? "Nam" : "Nữ")</td>
                            <td>@employee.Dob</td>
                            <td>@employee.Address</td>
                            <td>@employee.Phone</td>
                            <td>@employee.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


