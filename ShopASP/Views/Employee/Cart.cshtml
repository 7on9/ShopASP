@using ShopASP.Models
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    List<Cart> carts = ViewBag.Carts;
    carts = carts == null ? new List<Cart>() : carts;
}

<!-- Item -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="title-1 m-b-25 text-center">Đơn hàng đang chờ xử lý</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày tạo</th>
                        <th>Họ & tên</th>
                        <th>Nơi giao</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cart in carts)
                    {
                        <tr onclick="location.href='/Employee/CartInfor/@cart.Id'">
                            <td>@cart.Id</td>
                            <td>@cart.TimeCreate</td>
                            <td>@cart.Customer.Name</td>
                            <td>@cart.Customer.Address</td>
                            <td>@cart.Customer.Phone</td>
                            <td>@cart.Customer.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>