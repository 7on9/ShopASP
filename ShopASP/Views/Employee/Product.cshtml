@model IEnumerable<ShopASP.Models.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<!-- Item -->
<div class="row">
    <div class="col-lg-12">
        <div class="row col-lg-12 offset-0">
            <button type="button" class="btn btn-success col-lg-2" onclick="location.href='../../../../Employee/CreateNewProduct'">
                <i class="fa fa-plus-circle"></i>&nbsp; Thêm mới
            </button>
            &nbsp;
            <button type="button" class="btn btn-danger col-lg-2">
                <i class="fa fa-minus-circle"></i>&nbsp; Xóa
            </button>
        </div>

        <h2 class="title-1 m-b-25 text-center">Danh sách nhân viên</h2>

        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Hình ảnh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Quantum</td>
                        <td>
                            <img class="img img-mini" src="@product.ImagePaths.ImagePath" />
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


